{
	"name": "play-azure",
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter '@apps/*' dev",
		"check": "bun check:biome && bun check:type",
		"check:biome": "biome check",
		"check:type": "bun run --workspaces check:type",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@types/bun": "latest",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
