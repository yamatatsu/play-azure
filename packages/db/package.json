{
	"name": "@packages/db",
	"version": "0.0.0",
	"private": true,
	"exports": {
		".": "./src/index.ts"
	},
	"types": "./src/index.ts",
	"scripts": {
		"check:type": "tsc --noEmit",
		"db:migrate:deploy": "bun run prisma -- migrate deploy",
		"db:migrate:dev": "bun run prisma -- migrate dev",
		"db:migrate:reset": "bun run prisma -- migrate reset",
		"db:studio": "bun run prisma -- studio",
		"db:generate": "prisma generate",
		"prisma": "bun run env-file -- prisma",
		"env-file": "dotenvx run -f .env.db --"
	},
	"dependencies": {
		"@packages/logger": "workspace:*",
		"@prisma/adapter-pg": "6.18.0",
		"@prisma/client": "6.18.0",
		"prisma": "6.18.0"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "1.51.0",
		"@quramy/prisma-fabbrica": "2.3.1",
		"@types/node": "24.5.2",
		"typescript": "5.9.3"
	}
}
